let delimitador = [' ''\t''\n']
let espacioEnBlanco = delimitador+
let digito = ['0'-'9']
let numero = '-'?digito+
let letra = ['a'-'Z''A'-'Z']
let identificador = letra(letra|digito)*

rule tokens =
	espacioEnBlanco	{ }
  | identificador	{ return "Identificador" }
  | numero			{ return "Numero" }
  | '+'				{ return "Operador de suma" }
  | '*'				{ return "Operador de multiplicacion" }
  | '='				{ return "Operador de asignacion" }
