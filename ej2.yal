{
  open Parser
}

rule tokens =
	| [' ' '\t' '\n']		{ tokenize lexbuf }  (* ignorar espacios en blanco *)
	| "/*"										{ comment lexbuf }   (* ignorar comentarios *)
	| "*/"										{ tokenize lexbuf }  (* final del comentario *)
	| ['a'-'z' 'A'-'Z']+			{tokenize id}
	| ['0'-'9']+ "." ['0'-'9']*		{ tokenize FLOAT }